{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "outDir": "./build",
    "jsx": "react",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "sourceMap": true,
    "target": "es5",
    "types": [],
    "strict": true,
    "downlevelIteration": true,
    "rootDirs": [
      ".",
      "./src/app",
      "./node_modules"
    ],
    "paths": {
      "assets/*": [ "assets/*" ],
      "components/*": [ "components/*" ],
      "core/*": [ "core/*" ],
      "features/*": [ "features/*" ],
      "pages/*": [ "pages/*" ],
      "tests/*": [ "tests/*" ]
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}